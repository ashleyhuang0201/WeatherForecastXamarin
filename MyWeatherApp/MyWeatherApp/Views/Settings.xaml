<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyWeatherApp.Views.Settings">
    <ContentPage.Content>
        <Frame BackgroundColor="#355591" Padding="10" HorizontalOptions="FillAndExpand" VerticalOptions="Start" Margin="10" CornerRadius="30">
            <StackLayout Orientation="Vertical">
                <Switch x:Name="unitsSwitch" Toggled="UnitsSwitch_Toggled" HorizontalOptions="Center" OnColor="#AAAFD9"/>
                <Label x:Name="unitsLabel" Text="Metric" TextColor="#FFFFFF" HorizontalOptions="Center"/>
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>